<h2>New User</h2>

<%= render "shared/errors", :object => @user %>

<%= form_for @user do |user_fields| %>


  <%= fields_for :addresses do |address_fields| %>
    <div class = "panel">
      <%= address_fields.text_field :street_address %>
      <%= address_fields.text_field :city %>
      <%= address_fields.collection_select :state_id, State.all, :id, :name, prompt: "Pick a State" %>
      <%= address_fields.text_field :zip_code %>


      <%= address_fields.check_box :billing %>
      <%= address_fields.check_box :shipping %>
      <%= address_fields.check_box :_destroy %>
    </div>

  <% end %>




<div class = "panel">

</div>

<div class = "panel">

    <%= user_fields.submit %>
</div>



<% end %>